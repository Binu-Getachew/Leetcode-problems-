class Solution:
    def getPermutation(self, n: int, k: int) -> str:
        from math import factorial

        nums = list(map(str, range(1, n + 1)))
        k -= 1  # Convert to 0-based index
        result = []

        for i in range(n, 0, -1):
            fact = factorial(i - 1)
            index = k // fact
            result.append(nums.pop(index))
            k %= fact

        return ''.join(result)
